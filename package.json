{
  "name": "mu-cloud",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "lint:ts": "next lint",
    "lint:ts:fix": "next lint --fix",
    "lint:scss": "npx stylelint \"**/*.scss\"",
    "lint:scss:fix": "npx stylelint \"**/*.scss\" --fix",
    "test:unit": "jest",
    "test:ui:init": "npx loki update",
    "test:ui": "npx loki test",
    "test:ui:ok": "npx loki approve",
    "test:ui:report": "reg-cli \"./.loki/current\" \"./.loki/reference\" \"./.loki/difference\" -R \"./reports/uiTestReport.html\" -J \"./reports/uiTestReport/reg.json\"",
    "storybook": "storybook dev -p 6006 -c ./config/.storybook",
    "storybook:build": "storybook build -c ./config/.storybook",
    "prepare": "husky install",
    "postinstall": "node scripts/clear-cache.js",
    "generate:slice": "node ./scripts/createSlice/index.js"
  },
  "dependencies": {
    "@types/node": "20.5.0",
    "@types/react": "18.2.20",
    "@types/react-dom": "18.2.7",
    "classnames": "^2.3.2",
    "D": "^1.0.0",
    "eslint": "8.47.0",
    "eslint-config-next": "13.4.18",
    "loki": "^0.32.0",
    "next": "13.4.18",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-tooltip": "^5.21.1",
    "typescript": "5.1.6"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.3.1",
    "@storybook/addon-interactions": "^7.3.1",
    "@storybook/addon-links": "^7.3.1",
    "@storybook/addon-onboarding": "^1.0.8",
    "@storybook/blocks": "^7.3.1",
    "@storybook/nextjs": "^7.3.1",
    "@storybook/react": "^7.3.1",
    "@storybook/testing-library": "^0.2.0",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^6.0.1",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.3",
    "@types/testing-library__jest-dom": "^6.0.0",
    "eslint-plugin-storybook": "^0.6.13",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "jest-html-reporters": "^3.1.4",
    "reg-cli": "^0.17.7",
    "sass": "^1.66.0",
    "storybook": "^7.3.1",
    "stylelint": "^15.10.2",
    "stylelint-config-standard-scss": "^10.0.0"
  },
  "loki": {
    "chromeSelector": "#storybook-root > *",
    "configurations": {
      "chrome.laptop": {
        "target": "chrome.docker",
        "width": 1366,
        "height": 768,
        "deviceScaleFactor": 1,
        "mobile": false
      },
      "chrome.iphone7": {
        "target": "chrome.docker",
        "preset": "iPhone 7"
      }
    }
  }
}
